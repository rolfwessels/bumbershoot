; Top-most EditorConfig file
root = true

[*]
end_of_line = crlf

; 4-column space indentation
[*.cs]
indent_style = space
indent_size = 4

; 2-column tab indentation
[*.js]
indent_style = space
indent_size = 2
end_of_line = cr

[*.sh]
indent_style = space
indent_size = 2
end_of_line = cr

[*.yml]
indent_style = space
indent_size = 2
end_of_line = cr

[Dockerfile]
indent_style = space
indent_size = 2
end_of_line = cr

[Makefile]
indent_style = tab
end_of_line = cr